{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "amlWorkspaceName": {
            "type": "string",
            "metadata": {
                "description": "Specifies the name of the Azure Machine Learning workspace."
            }
        },
        "functionAppName": {
            "type": "string",
            "defaultValue": "[concat('fnapp', uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "The name of the function app that you wish to create."
            }
        }
    },
    "variables": {
        "eventGridSubName": "[concat(parameters('amlWorkspaceName'),parameters('functionAppName'), uniqueString(resourceGroup().name)) ]",
        "amlWorkspaceResourceId": "[concat('/subscriptions/',subscription().subscriptionId ,'/resourceGroups/', resourceGroup().name,'/providers/Microsoft.MachineLearningServices/workspaces/', parameters('amlWorkspaceName'))]",
        "functionAppResourceId": "[concat('/subscriptions/',subscription().subscriptionId ,'/resourceGroups/', resourceGroup().name,'/providers/Microsoft.Web/sites/', parameters('functionAppName'))]"
    },
    "resources": [
        {
            "name": "[variables('eventGridSubName')]",
            "type": "Microsoft.EventGrid/eventSubscriptions",
            "apiVersion": "2020-06-01",
            "scope": "[concat('Microsoft.MachineLearningServices/workspaces', '/', parameters('amlWorkspaceName'))]",
            "dependsOn": [],
            "properties": {
                "topic": "[variables('amlWorkspaceResourceId')]",
                "destination": {
                    "endpointType": "AzureFunction",
                    "properties": {
                        "resourceId": "[concat(variables('functionAppResourceId'), '/functions/ml-register-trigger')]",
                        "maxEventsPerBatch": 1,
                        "preferredBatchSizeInKilobytes": 64
                    }
                },
                "filter": {
                    "includedEventTypes": [
                        "Microsoft.MachineLearningServices.ModelRegistered"
                    ],
                    "advancedFilters": []
                },
                "labels": [],
                "eventDeliverySchema": "EventGridSchema"
            }
        }
    ],
    "outputs": {}
}